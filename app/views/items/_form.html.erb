<%= render partial: 'shared/errors', :locals => {:object => @item}%>
<div class="col-md-4">
  <%= form_for @item do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'sr-only' %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Item Name' %>
      </div>
      <div class="form-group">
        <%= f.check_box :is_favorite %>
        <%= f.label :is_favorite, 'Is a Favorite Item' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>