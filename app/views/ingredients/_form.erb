<%= render partial: 'shared/errors', :locals => {:object => @ingredient}%>
<div class="col-md-4">
    <%= form_for @ingredient do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'sr-only'  %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Ingredient Name' %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'sr-only'  %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Ingredient Description' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>