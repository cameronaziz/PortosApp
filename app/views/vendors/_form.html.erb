<% content_for :head do %>
<script>
    $('#vendor_phone').mask('(000) 000-0000');
  </script>
<% end %>
<%= render partial: 'shared/errors', :locals => {:object => @vendor}%>
<div class="col-md-4">
  <%= form_for @vendor do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'sr-only' %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Vendor Name' %>
      </div>
      <div class="form-group">
        <%= f.label :contact, class: 'sr-only' %>
        <%= f.text_field :contact, class: 'form-control', placeholder: 'Contact Name' %>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'sr-only'  %>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email Address' %>
      </div>
      <div class="form-group">
        <%= f.label :phone, class: 'sr-only'  %>
        <%= f.text_field :phone, class: 'form-control', placeholder: 'Phone Number' %>
      </div>
      <%=  f.fields_for :catalog_items do |builder| %>
      <%= render 'vendors/catalog_item_fields', f: builder %>
      <% end %>




      <div class="form-group">
        <%= link_to_add_fields 'Add Item', f, :catalog_items, 'btn btn-primary' %> <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
  <% end %>
</div>
