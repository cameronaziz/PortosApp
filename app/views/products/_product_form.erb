<%= render partial: 'shared/errors', :locals => {:object => @product}%>
<div class="col-md-4">
    <%= form_for @product do |f| %>
      <div class="form-group">
        <%= f.label :name, class: 'sr-only'  %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Product Name' %>
      </div>
      <div class="form-group">
        <%= f.label :description, class: 'sr-only'  %>
        <%= f.text_area :description, class: 'form-control', placeholder: 'Product Description' %>
      </div>
      <%=  f.fields_for :catalog_items do |builder| %>
          <%= builder.label :box_size, class: 'sr-only' %>
          <%= builder.text_field :box_size, class: 'form-control', placeholder: 'Box Size' %><br>
          <%= builder.label :price, class: 'sr-only' %>
          <%= builder.text_field :price, class: 'form-control', placeholder: 'Price' %><br>
      <% end %>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
</div>